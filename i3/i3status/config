general {
        output_format = "i3bar"
        colors = true
        interval = 5
        color_good = "#aaff00"
        color_degraded = "#00dddd"
        color_bad = "#ff2200"
}

order += "tztime localtime"
order += "cpu_temperature 0"
order += "tztime localdate"
order += "battery 1"
order += "volume master"
order += "disk /"

disk "/" {
        format = "  %avail "
        prefix_type = custom
}

battery 1 {
        path="/sys/class/power_supply/BAT0/uevent"
        format = " %status : %percentage "
        status_bat = " 🔋"
        status_chr = ""
        last_full_capacity = false
        integer_battery_capacity = true
        low_threshold = 20
        threshold_type = percentage
}

tztime localdate {
        format = "  %d-%m-%Y "
}

tztime localtime {
        format = " %H:%M"
        min_width = 950
        align = "center"
}

volume master {
        format = "  %volume "
        format_muted = "  %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_temperature 0 {
       format = " CPU: %degrees °C "
       path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}
